#notes
  %header
    = partial 'partials/flash', :locals => { :flash => flash }
    = link_to "New Note", url(:notes, :new), :class => "btn blue"
  %section
    %table.notes
      %thead
        %tr
          %th.cb
            %input{:type => "checkbox"}
          %th Title
          %th Tags
          %th Last Modified
      %tbody
        - @notes.each do |note|
          %tr
            %td.cb
              %input{:type => "checkbox"}
            %td= link_to note.title, url(:notes, :show, :id => note.id)
            %td
              %ul
                - note.tags.each do |tag|
                  %li
                    %a.tag{:href => ""}= tag.text
            %td
              %span{:title => note.updated_at.strftime("%B %e, %Y at %l:%m%P")}= "#{time_ago_in_words(note.updated_at)} ago"
