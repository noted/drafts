!!!5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    %meta{:content => "Take notes with confidence.", :name => "description"}/
    %meta{:content => "Noted", :name => "author"}/

    %title Drafts

    %link{:href => "/humans.txt", :rel => "author", :type => "text/plain"}/
    %link{:href => "/assets/application.css", :rel => "stylesheet"}/

    %script{:src => "//use.typekit.net/wzl4fpj.js", :type => "text/javascript"}
    :coffeescript
      try
        Typekit.load()
      catch error
        console.log error

  %body#note
    %form{:action => "", :method => "patch"}
      #contain
        %header
          %section.main
            .inner
              %hgroup
                = text_field_tag :"note[title]", :placeholder => "Title", :value => @note.title
              %nav
                %ul
                  - if current_user
                    %li
                      %a.btn{:href => url(:notes, :new)}
                        %i.ss-icon check
                    %li
                      %a.btn{:href => url(:sessions, :destroy)}
                        %i.ss-icon logout
                  - else
                    %li
                      %a.btn.blue{:href => url(:users, :new)} Join
                    %li
                      %a.btn{:href => url(:sessions, :new)} Login
          %section.sub
            .inner
              %hgroup
                = text_field_tag :"note[tags]", :placeholder => "Tags", :value => @note.tags_as_str
              %nav
                %ul
                  %li
                    %a.btn{:href => ""}
                      %i.ss-icon help
                  %li
                    %a.btn{:href => ""} View

        #main
          %footer
            %nav
              %a.btn{:href => url(:index)}
                %i.ss-icon list

