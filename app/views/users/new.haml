#page
  %header
    %h3 Join
  %section
    - form_tag url(:users, :create), :method => "post", :class => "horizontal" do
      = partial 'partials/flash', :locals => { :flash => flash }
      .group
        %label{:for => "user[name]"} Name
        .controls
          = text_field_tag :"user[name]"
      .group
        %label{:for => "user[email]"} Email
        .controls
          = email_field_tag :"user[email]"
      .group
        %label{:for => "user[password]"} Password
        .controls
          = password_field_tag :"user[password]"
      .group.buttons
        .controls
          = submit_tag "Join", :class => "blue"
