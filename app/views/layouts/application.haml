!!!5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    %meta{:content => "Take notes with confidence.", :name => "description"}/
    %meta{:content => "Noted", :name => "author"}/

    %title Drafts

    %link{:href => "/humans.txt", :rel => "author", :type => "text/plain"}/
    %link{:href => "/assets/application.css", :rel => "stylesheet"}/

    %script{:src => "//use.typekit.net/wzl4fpj.js", :type => "text/javascript"}
    :coffeescript
      try
        Typekit.load()
      catch error
        console.log error

  %body
    #contain
      %header
        %section.main
          .inner
            %hgroup
              %h1= link_to "Drafts.", url(:index)
            %nav
              %ul
                - if current_user
                  %li
                    %a.btn.blue{:href => url(:notes, :new)} New Note
                  %li
                    %a.btn{:href => url(:sessions, :destroy)} Logout
                - else
                  %li
                    %a.btn.blue{:href => url(:users, :new)} Join
                  %li
                    %a.btn{:href => url(:sessions, :new)} Login

      = yield

      - unless current_user
        %footer
          .inner
            %p &copy; 2013 <a href="#">Noted</a>.
