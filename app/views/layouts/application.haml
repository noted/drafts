!!!5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    %meta{:content => "Take notes with confidence.", :name => "description"}/
    %meta{:content => "Noted", :name => "author"}/

    %title Drafts

    %link{:href => "/humans.txt", :rel => "author", :type => "text/plain"}/
    %link{:href => "/assets/application.css", :rel => "stylesheet"}/

    %script{:src => "//use.typekit.net/wzl4fpj.js", :type => "text/javascript"}
    :coffeescript
      try
        Typekit.load()
      catch error
        console.log error

  %body
    #contain
      %header
        .inner
          %hgroup
            %h1= link_to "Drafts", url(:index)
          %nav
            %ul
              - if current_user
                %li= link_to s("<i class='ss-icon'>plus</i>"), url(:notes, :new), :class => "btn blue symbol"
                %li= link_to "Account", url(:users, :edit), :class => "btn"
                %li= link_to "Logout", url(:sessions, :destroy), :class => "btn"
              - else
                %li= link_to "Join", url(:users, :new), :class => "btn blue"
                %li= link_to "Login", url(:sessions, :new), :class => "btn"

      #main{:role => "main"}
        = yield

      %footer
        .inner
          %p= s("&copy; #{Time.now.year} <a href=\"http://getnotedapp.com\">Noted</a>. Code on <a href=\"https://github.com/noted/drafts\">GitHub</a>.")

    %script{:src => "/assets/application.js"}
