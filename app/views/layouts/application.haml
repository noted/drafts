!!!5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    %meta{:content => "Take notes with confidence.", :name => "description"}/
    %meta{:content => "Noted", :name => "author"}/

    %title Drafts

    %link{:href => "/humans.txt", :rel => "author", :type => "text/plain"}/
    %link{:href => "/assets/application.css", :rel => "stylesheet"}/

    %script{:src => "//use.typekit.net/wzl4fpj.js", :type => "text/javascript"}
    :coffeescript
      try
        Typekit.load()
      catch error
        console.log error

  %body
    #contain
      %header
        - if current_user && @note
          = partial 'layouts/header/note'
        - elsif current_user
          = partial 'layouts/header/authenticated'
        - else
          = partial 'layouts/header/universal'

      #main= yield

      - unless current_user && @note
        %footer
          .inner
            %p &copy; 2013 <a href="#">Noted</a>.
