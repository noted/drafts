!!!5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    %meta{:content => "Take notes with confidence.", :name => "description"}/
    %meta{:content => "Noted", :name => "author"}/

    %title Drafts

    %link{:href => "/humans.txt", :rel => "author", :type => "text/plain"}/
    %link{:href => "/assets/application.css", :rel => "stylesheet"}/

    %script{:src => "//use.typekit.net/rau7fcj.js", :type => "text/javascript"}
    :coffeescript
      try
        Typekit.load()
      catch error
        console.log error

  %body
    #contain
      %header
        .inner
          %hgroup
            %h1
              %a{:href => url(:index)}
                Drafts.
                %span beta
          %nav
            %ul
              - if current_user
                %li= link_to "Settings", ""
                %li= link_to "Logout", url(:sessions, :destroy)
              - else
                %li= link_to "Join", url(:users, :new)
                %li= link_to "Login", url(:sessions, :new)


      #main{:role => "main"}
        = yield

      %footer
        .inner
          %p= s("<a href='http://getnotedapp.com'>Noted</a> fecit #{Time.now.year}.")

    %script{:src => "/assets/application.js"}
