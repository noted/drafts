%section.main
  .inner
    %hgroup
      = text_field_tag :"note[title]", :class => "borderless header", :placeholder => "Title", :tabindex => "1", :value => @note.title
    %nav
      %ul
        - if current_user
          %li
            %a.btn{:href => url(:notes, :new)}
              %i.ss-icon check
        - else
          %li
            %a.btn.blue{:href => url(:users, :new)} Join
          %li
            %a.btn{:href => url(:sessions, :new)} Login
%section.sub
  .inner
    %hgroup
      = text_field_tag :"note[tags]", :class => "borderless", :placeholder => "Tags", :tabindex => "2", :value => @note.tags_as_str
    %nav
      %ul
        %li
          %a.btn{:href => ""}
            %i.ss-icon help
        %li
          %a.btn{:href => ""} View
