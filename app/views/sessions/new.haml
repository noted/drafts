!!!5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}/
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    %meta{:content => "Take notes with confidence.", :name => "description"}/
    %meta{:content => "Noted", :name => "author"}/

    %title Drafts

    %link{:href => "/humans.txt", :rel => "author", :type => "text/plain"}/
    %link{:href => "/assets/sessions.css", :rel => "stylesheet"}/

    %script{:src => "//use.typekit.net/wzl4fpj.js", :type => "text/javascript"}
    :coffeescript
      try
        Typekit.load()
      catch error
        console.log error

  %body
    #contain
      %header
        %h1= link_to "Drafts.", url(:index)
      %section
        - form_tag url(:sessions, :create), :method => "post" do
          = partial 'partials/flash', :locals => { :flash => flash }

          %p= email_field_tag :email, :placeholder => "Email"
          %p= password_field_tag :password, :placeholder => "Password"
          %nav
            %ul
              %li= link_to "Join", url(:users, :new), :class => "btn"
              %li
                %button.blue{:type => "submit"} Login

    %script{:src => "/assets/application.js"}
